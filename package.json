{
  "name": "@mojaloop/event-sdk",
  "version": "10.7.2",
  "description": "Shared code for Event Logging",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/config",
    "/dist",
    "/protos"
  ],
  "scripts": {
    "ts_app": "npx tsc ; npx ts-node src/examples/ts_app.ts",
    "js_app": "npx tsc ; npx ts-node src/examples/js_app.js",
    "server": "npx tsc ; npx ts-node src/server/server.ts",
    "test": "npm run test:unit",
    "pretest": "npm run build",
    "lint": "npx eslint ./src/**/*.ts ./test/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "build": "npx tsc",
    "watch": "npx tsc -w",
    "test:unit1": "npx jest --testMatch '**/test/unit/**/*.test.ts'",
    "test:unit2": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "test:unit": "npx jest",
    "test:junit": "npx jest --reporters=default --reporters=jest-junit --testMatch '**/test/unit/**/*.test.ts'",
    "test:coverage": "npx jest --coverage --coverageThreshold='{}' --testMatch '**/test/unit/**/*.test.ts'",
    "test:coverage-check": "npx jest --coverage --testMatch '**/test/unit/**/*.test.ts'",
    "warn-pre-commit": "echo \"pre commit tasks running. build and test\"",
    "audit:resolve": "SHELL=sh resolve-audit --production",
    "audit:check": "SHELL=sh check-audit --production",
    "dep:check": "npx ncu -e 2",
    "dep:update": "npx ncu -u",
    "release": "npx standard-version --no-verify --releaseCommitMessageFormat 'chore(release): {{currentTag}} [skip ci]'",
    "snapshot": "npx standard-version --no-verify --skip.changelog --prerelease snapshot --releaseCommitMessageFormat 'chore(snapshot): {{currentTag}}'"
  },
  "pre-commit": [
    "warn-pre-commit",
    "dep:check",
    "build",
    "lint",
    "test:unit"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/event-sdk.git"
  },
  "keywords": [
    "event"
  ],
  "author": "ModusBox",
  "contributors": [
    "Georgi Georgiev <georgi.georgiev@modusbox.com>",
    "Miguel de Barros <miguel.debarros@modusbox.com>",
    "Ramiro Gonz√°lez Maciel <ramiro@modusbox.com>",
    "Valentin Genev <valentin.genev@modusbox.com>",
    "Lewis Daly <lewisd@crosslaketech.com"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mojaloop/event-sdk/issues"
  },
  "homepage": "https://github.com/mojaloop/event-sdk#readme",
  "dependencies": {
    "@grpc/proto-loader": "0.6.12",
    "@mojaloop/central-services-logger": "11.0.0",
    "brototype": "0.0.6",
    "error-callsites": "2.0.4",
    "grpc": "1.24.9",
    "lodash": "4.17.21",
    "moment": "2.29.3",
    "parse-strings-in-object": "2.0.0",
    "protobufjs": "6.11.2",
    "rc": "1.2.8",
    "serialize-error": "11.0.0",
    "traceparent": "1.0.0",
    "tslib": "2.4.0",
    "uuid4": "2.0.2",
    "winston": "3.7.2"
  },
  "devDependencies": {
    "@types/jest": "27.5.1",
    "@types/lodash": "4.14.182",
    "@types/node": "17.0.34",
    "@types/sinon": "10.0.11",
    "@types/tape": "4.13.2",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "debug": "4.3.4",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "faucet": "0.0.1",
    "jest": "28.1.0",
    "jest-junit": "13.2.0",
    "npm-audit-resolver": "3.0.0-7",
    "npm-check-updates": "13.0.1",
    "nyc": "15.1.0",
    "pre-commit": "1.2.2",
    "prettier": "^2.6.2",
    "proxyquire": "2.1.3",
    "replace": "^1.2.1",
    "sinon": "14.0.0",
    "standard": "17.0.0",
    "ts-jest": "28.0.2",
    "ts-node": "10.7.0",
    "tslint": "6.1.3",
    "typedoc": "0.22.15",
    "typescript": "4.6.4"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "typings"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "standard": {
    "ignore": [
      "/dist",
      "jest.config.js"
    ]
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "replace '\\[mojaloop/#(\\d+)\\]\\(https://github.com/mojaloop/(.*)/issues/(\\d+)\\)' '[mojaloop/#$1](https://github.com/mojaloop/project/issues/$1)' CHANGELOG.md"
    }
  }
}
