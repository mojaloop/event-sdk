{
  "name": "@mojaloop/event-sdk",
  "version": "10.7.0",
  "description": "Shared code for Event Logging",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/config",
    "/dist",
    "/protos"
  ],
  "scripts": {
    "ts_app": "npx tsc ; npx ts-node src/examples/ts_app.ts",
    "js_app": "npx tsc ; npx ts-node src/examples/js_app.js",
    "server": "npx tsc ; npx ts-node src/server/server.ts",
    "test": "npm run test:unit | faucet",
    "pretest": "npm run build",
    "standard": "npx standard",
    "standard:fix": "npx standard --fix",
    "lint": "npm run standard",
    "lint:fix": "npm run standard:fix",
    "build": "npx tsc",
    "watch": "npx tsc -w",
    "test:unit": "npx jest --testMatch '**/test/unit/**/*.test.ts'",
    "test:junit": "npx jest --reporters=default --reporters=jest-junit --testMatch '**/test/unit/**/*.test.ts'",
    "test:coverage": "npx jest --coverage --coverageThreshold='{}' --testMatch '**/test/unit/**/*.test.ts'",
    "test:coverage-check": "npx jest --coverage --testMatch '**/test/unit/**/*.test.ts'",
    "warn-pre-commit": "echo \"pre commit tasks running. build and test\"",
    "audit:resolve": "SHELL=sh resolve-audit --production",
    "audit:check": "SHELL=sh check-audit --production",
    "dep:check": "npx ncu -e 2",
    "dep:update": "npx ncu -u"
  },
  "pre-commit": [
    "warn-pre-commit",
    "dep:check",
    "build",
    "git:standardFix",
    "test:unit"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/event-sdk.git"
  },
  "keywords": [
    "event"
  ],
  "author": "ModusBox",
  "contributors": [
    "Georgi Georgiev <georgi.georgiev@modusbox.com>",
    "Miguel de Barros <miguel.debarros@modusbox.com>",
    "Ramiro Gonz√°lez Maciel <ramiro@modusbox.com>",
    "Valentin Genev <valentin.genev@modusbox.com>",
    "Lewis Daly <lewisd@crosslaketech.com"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mojaloop/event-sdk/issues"
  },
  "homepage": "https://github.com/mojaloop/event-sdk#readme",
  "dependencies": {
    "@grpc/proto-loader": "0.6.2",
    "@mojaloop/central-services-logger": "10.6.0",
    "brototype": "0.0.6",
    "error-callsites": "2.0.3",
    "grpc": "1.24.9",
    "lodash": "4.17.21",
    "moment": "2.29.1",
    "parse-strings-in-object": "2.0.0",
    "protobufjs": "6.11.2",
    "rc": "1.2.8",
    "serialize-error": "8.1.0",
    "sinon": "10.0.0",
    "traceparent": "1.0.0",
    "tslib": "2.2.0",
    "uuid4": "2.0.2",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@types/jest": "26.0.23",
    "@types/lodash": "4.14.169",
    "@types/node": "15.0.3",
    "@types/sinon": "10.0.0",
    "@types/tape": "4.13.0",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "debug": "4.3.1",
    "faucet": "0.0.1",
    "jest": "26.6.3",
    "jest-junit": "12.0.0",
    "npm-audit-resolver": "2.3.0",
    "npm-check-updates": "11.5.11",
    "nyc": "15.1.0",
    "pre-commit": "1.2.2",
    "proxyquire": "2.1.3",
    "standard": "16.0.3",
    "tap-spec": "5.0.0",
    "tap-xunit": "2.4.1",
    "tape": "5.2.2",
    "tapes": "4.1.0",
    "ts-jest": "26.5.6",
    "ts-node": "9.1.1",
    "tslint": "6.1.3",
    "typedoc": "0.20.36",
    "typescript": "4.2.4"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "typings"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "standard": {
    "ignore": [
      "/dist",
      "jest.config.js"
    ]
  }
}
